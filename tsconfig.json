{
	"include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
    "typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}